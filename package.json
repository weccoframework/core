{
    "name": "@wecco/core",
    "version": "0.20.0",
    "description": "A simple, minimalistic web framework based on web components and HTML templates",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/weccoframework/core.git"
    },
    "homepage": "https://github.com/weccoframework/core",
    "devDependencies": {
        "typescript": "^4.1.2",
        "mocha": "^8.2.1",
        "@types/mocha": "^8.0.4",
        "ts-node": "^9.0.0",
        "iko": "^0.6.0",
        "sinon": "^9.2.1",
        "@types/sinon": "^9.0.8",
        "jsdom": "^16.4.0",
        "jsdom-global": "^3.0.2",
        "nyc": "^15.1.0",
        "rollup": "^2.33.3",
        "rollup-plugin-typescript2": "^0.29.0",
        "rollup-plugin-commonjs": "^10.1.0",
        "puppeteer": "^5.5.0",
        "@types/puppeteer": "^5.4.0",
        "express": "^4.17.1",
        "@types/express": "^4.17.9",
        "tslint": "^6.1.3"
    },
    "main": "dist/wecco-core.umd.js",
    "module": "dist/wecco-core.es5.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rollup -c",
        "watch": "rollup -c -w",
        "test": "mocha --require ts-node/register --require jsdom-global/register test/unit/**/*.test.ts",
        "acceptance-test": "mocha --timeout 5000 test/acceptance/**/*.test.js",
        "coverage": "nyc mocha --require ts-node/register --require jsdom-global/register test/unit/**/*.test.ts",
        "lint": "tslint -p tslint.json"
    },
    "nyc": {
        "include": [
            "src/**/*.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "sourceMap": true,
        "instrument": true
    }
}
